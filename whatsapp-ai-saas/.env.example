# === API ===
APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET=super_secret_key
JWT_EXPIRE_MIN=43200

# === LLM ===
LLM_PROVIDER=openai          # openai | anthropic | gemini | ollama
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3

# For OpenAI
OPENAI_API_KEY=sk-xxxxxxxx

# For Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxxx

# For Gemini
GEMINI_API_KEY=sk-gem-xxxxxx

# For Ollama (local)
OLLAMA_URL=http://host.docker.internal:11434


# === DB ===
DATABASE_URL=postgresql+asyncpg://wa_user:wa_pass@db:5432/wa_saas
DB_HOST=db
DB_PORT=5432
DB_NAME=wa_saas
DB_USER=wa_user
DB_PASS=wa_pass

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === RAG ===
CHROMA_PATH=/data/chroma

# === WhatsApp Provider Selection ===
# Options: dialog360 | cloud
WA_PROVIDER=cloud

# --- 360dialog ---
DIALOG360_BASE_URL=https://waba.360dialog.io
DIALOG360_API_KEY=YOUR_DIALOG360_API_KEY

# --- WhatsApp Cloud API (Meta) ---
WA_CLOUD_BASE_URL=https://graph.facebook.com/v20.0
WA_CLOUD_TOKEN=YOUR_WA_CLOUD_TOKEN
WA_CLOUD_PHONE_ID=YOUR_PHONE_NUMBER_ID
WA_CLOUD_BUSINESS_ID=YOUR_BUSINESS_ID
WA_VERIFY_TOKEN=your_webhook_verify_token

# === Moderation ===
MODERATION_ENABLED=true
OPENAI_API_KEY=YOUR_OPENAI_KEY

# === Credits ===
CREDIT_COST_TEXT=1
CREDIT_COST_MEDIA=2
DEDUCT_ON_RECEIVE=true
FREE_TRIAL_CREDITS=500

# === Razorpay ===
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
CURRENCY=INR

# === Credit Packs (amount in smallest currency unit) ===
PACK_STARTER_ID=starter_1000
PACK_STARTER_AMOUNT=1000
PACK_STARTER_CREDITS=1000

PACK_GROWTH_ID=growth_6000
PACK_GROWTH_AMOUNT=5000
PACK_GROWTH_CREDITS=6000

PACK_ENTERPRISE_ID=enterprise_70000
PACK_ENTERPRISE_AMOUNT=50000
PACK_ENTERPRISE_CREDITS=70000
